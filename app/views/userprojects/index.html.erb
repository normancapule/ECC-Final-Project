<% title @project.project_name %>

<table>
  <tr>
    <th>User</th>
    <th>Role</th>
  </tr>
  <% for userproject in @userprojects %>
    <tr class="<%= cycle("even", "odd") %>">
      <td><%= userproject.user.name %></td>
      <td><%= Userproject.where(:user_id => userproject.user, :project_id => @project.id).map(&:role).join(', ') %></td>
      <td><%= link_to "Edit", edit_project_userproject_path(@project, userproject) %></td>
      <td><%= link_to "Destroy", project_userproject_path(@project, userproject.id), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add Members", new_project_userproject_path %> | <%= link_to "Back to Project", project_path(@project) %></p>
