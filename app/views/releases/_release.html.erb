   <tr class="<%= cycle("even", "odd") %>">
      <td><%= release.project_id %></td>
      <td><%= release.name %></td>
      <td><%= release.date_released %></td>
      <td><%= link_to "Show", project_release_path(@project, release) %></td>
      <td><%= link_to_if(can?(:update,Release),"Edit", 
                         edit_project_release_path(@project, release)){} %></td>
      <td><%= link_to_if(can?(:delete,Release), "Destroy", 
                         project_release_path(@project, release), 
                              :confirm => 'Are you sure?', 
                              :method => :delete, 
                              :remote => true, 
                              :class=>'delete_post'){} %></td>
    </tr>
