<% title "Releases" %>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Date Released</th>
  </tr>
  <% for release in @releases %>
    <tr>
      <td><%= release.project_id %></td>
      <td><%= release.name %></td>
      <td><%= release.date_released %></td>
      <td><%= link_to "Show", release %></td>
      <td><%= link_to "Edit", edit_release_path(release) %></td>
      <td><%= link_to "Destroy", release, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Release", new_release_path %></p>
